@model FoodForm.Models.Utilizadores


@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Utilizadores</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Imagem)
        </dt>
        <dd class = "col-sm-10">
            <img src="~/img/utilizadores/@Model.Imagem" height="256" alt="@Model.Nome" title="@Model.Nome" />
        </dd>
    </dl>
</div>

@* Lista de receitas criadas *@
<table>
    <h4>Receitas Criadas</h4>
    <tr>
        <td>Titulo</td>
    </tr>
    @foreach (var receita in Model.MinhasReceitas)
    {
        <tr>
            <td>@receita.Titulo</td>
        </tr>
    }
</table>

<div>
    <a asp-action="Edit" asp-route-id="@Model.ID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
