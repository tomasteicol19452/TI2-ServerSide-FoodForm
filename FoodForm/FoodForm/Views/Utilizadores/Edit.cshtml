@model FoodForm.Models.Utilizadores

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Utilizadores</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Imagem" class="control-label"></label>
                <input type="file" name="fotoUser" accept=".jpg,.png" style="color:blue;" />
                <span asp-validation-for="Imagem" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    @if (User.IsInRole("Moderador"))
    {<a class="btn btn-light" asp-action="Index">Voltar</a>}
    @if (User.IsInRole("Utilizador"))
    {<a class="btn btn-light" asp-action="Index" asp-controller="Home">Voltar</a>}
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
