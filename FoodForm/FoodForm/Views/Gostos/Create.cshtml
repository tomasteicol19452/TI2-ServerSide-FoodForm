@model FoodForm.Models.Gostos

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Gostos</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Gosto" /> @Html.DisplayNameFor(model => model.Gosto)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="UtilizadorFK" class="control-label"></label>
                <select asp-for="UtilizadorFK" class ="form-control" asp-items="ViewBag.UtilizadorFK"></select>
            </div>
            <div class="form-group">
                <label asp-for="ReceitaFK" class="control-label"></label>
                <select asp-for="ReceitaFK" class ="form-control" asp-items="ViewBag.ReceitaFK"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
