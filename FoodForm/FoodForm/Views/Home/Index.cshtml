@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Bemvindo ao FoodForm!</h1>
    <a class="text-dark" asp-area="" asp-controller="Receitas" asp-action="Index">
        <button>Todas as Receitas</button>
    </a>
    @if (User.Identity.IsAuthenticated)
